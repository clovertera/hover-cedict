{
    "manifest_version": 3,
    "name": "Hover for CEDICT",
    "version": "1.0",
    "description": "Hover over Chinese characters to see their meanings",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}